            <shape>
                <gradient
                    android:startColor="@color/transparent_color"
                    android:centerColor="@color/transparent_color"
                    android:endColor="@color/transparent_color"
                    />
            </shape>
        </item>


        <item
            android:id="@android:id/progress"
            >
            <clip>
                <shape>
                   
                    <gradient
                        android:startColor="@color/app_text_color"
                        android:endColor="@color/app_text_color" />
                </shape>
            </clip>
        </item>

    </layer-list>