<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AccentColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_image_height"
            android:background="@drawable/game_bg_top"
            >

            <LinearLayout
                android:id="@+id/scores_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/points_layout_margin_top"
                android:padding="@dimen/common_margin"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/question_number_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1/100"
                        android:textSize="@dimen/points_text_size"
                        android:textColor="@color/White"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:textSize="@dimen/points_below_text_size"
                        android:textColor="@color/White"
                        android:gravity="center"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/dummy_texview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/points_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/points_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/points_text_size"
                        android:textColor="@color/White"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textSize="@dimen/points_below_text_size"
                        android:layout_weight="1"
                        android:textColor="@color/White"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/game_bg_bottom"
            android:gravity="center"
            >
                <TextView
                    android:id="@+id/question_textview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_text_view_height"
                    android:text="This is sample question text s sample question text This is sample question text"
                    android:scrollbars="vertical"
                    android:maxLines="1000"
                    android:gravity="center"
                    android:textColor="@color/app_text_color"
                    android:paddingStart="@dimen/left_margin"
                    android:paddingEnd="@dimen/right_margin"
                    android:textSize="@dimen/question_text_size"
                    />
                <LinearLayout
                    android:layout_below="@+id/question_textview"
                    android:id="@+id/options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_alignParentBottom="true"
                    >
                    <Button
                        android:id="@+id/option1_button"
                        android:layout_width="@dimen/option_bg_image_width"
                        android:layout_height="@dimen/option_bg_image_height"
                        android:background="@drawable/optionbg_white"
                        android:text="Option 1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/option_text_size"
                        android:gravity="left|center"
                        android:textAllCaps="false"
                        android:layout_marginTop="1dp"
                        android:maxLines="2"
                        android:paddingRight="@dimen/option_padding_right"
                        android:paddingLeft="@dimen/option_padding_left"
                        />
                    <Button

                        android:id="@+id/option2_button"
                        android:layout_width="@dimen/option_bg_image_width"
                        android:layout_height="@dimen/option_bg_image_height"
                        android:background="@drawable/optionbg_white"
                        android:text="Option 2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/option_text_size"
                        android:gravity="left|center"
                        android:textAllCaps="false"
                        android:layout_marginTop="1dp"
                        android:maxLines="2"
                        android:paddingRight="@dimen/option_padding_right"
                        android:paddingLeft="@dimen/option_padding_left"
                        />
                    <Button

                        android:id="@+id/option3_button"
                        android:layout_width="@dimen/option_bg_image_width"
                        android:layout_height="@dimen/option_bg_image_height"
                        android:background="@drawable/optionbg_white"
                        android:text="Option 3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/option_text_size"
                        android:gravity="left|center"
                        android:textAllCaps="false"
                        android:layout_marginTop="1dp"
                        android:maxLines="2"
                        android:paddingRight="@dimen/option_padding_right"
                        android:paddingLeft="@dimen/option_padding_left"
                        />
                    <Button

                        android:id="@+id/option4_button"
                        android:layout_width="@dimen/option_bg_image_width"
                        android:layout_height="@dimen/option_bg_image_height"
                        android:background="@drawable/optionbg_white"
                        android:text="Option 4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/option_text_size"
                        android:gravity="left|center"
                        android:textAllCaps="false"
                        android:layout_marginTop="1dp"
                        android:maxLines="2"
                        android:paddingRight="@dimen/option_padding_right"
                        android:paddingLeft="@dimen/option_padding_left"
                        />
                </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        >

        <LinearLayout
            android:id="@+id/home_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/left_margin"
            >

            <ImageView
                android:layout_width="@dimen/title_bar_button_size"
                android:layout_height="@dimen/title_bar_button_size"
                android:src="@drawable/home"
                android:contentDescription="@string/simple_description" />
        </LinearLayout>


        <me.grantland.widget.AutofitTextView
            android:id="@+id/title_textview"
            android:layout_toStartOf="@+id/skip_button"
            android:layout_toEndOf="@+id/home_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/title_text_size"
            custom:minTextSize="10sp"
            android:padding="5dp"
            android:minLines="1"
            android:maxLines="1"
            android:text="Car"
            />

        <Button
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/right_margin"
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:minWidth="0dp"
            android:layout_height="@dimen/title_bar_size"
            android:text="@string/skip"
            android:textColor="@color/app_text_color"
            android:background="@color/transparent_color"
            android:textAllCaps="false"
            android:gravity="center|right"
            android:textSize="@dimen/skip_button_text_size"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_alignParentStart="true">

        <com.dwhpro.utils.CircleImageView
            android:id="@+id/question_imageview"
            android:layout_width="@dimen/question_image_size"
            android:layout_height="@dimen/question_image_size"
            android:layout_marginRight="@dimen/right_margin_extra"
            android:layout_marginTop="@dimen/question_image_top_margin"
            android:layout_alignParentRight="true"
            />

        <com.dwhpro.countdownanimation.CountDownProgress
            android:id="@+id/progress_view"
            android:layout_width="@dimen/progress_view_size"
            android:layout_height="@dimen/progress_view_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_margin_extra"
            custom:donut_finished_color="@color/cardview_light_background"
            custom:donut_finished_stroke_width="@dimen/progress_stroke_value"
            custom:donut_progress="10"
            custom:donut_text_size="@dimen/progress_value_text"
            custom:donut_unfinished_stroke_width="@dimen/progress_stroke_value" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/explanation_layout"
        android:background="@drawable/game_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_image_height"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            >
            <TextView
                android:id="@+id/answer_status_textview"
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/correct_wrong_status_text_size"
                android:text="Wrong"
                />
            <Button
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/answer_status_textview"
                android:id="@+id/explanation_next_button"
                android:layout_marginEnd="@dimen/right_margin"
                android:layout_width="wrap_content"
                android:minWidth="0dp"
                android:layout_height="@dimen/title_bar_size"
                android:text="Next"
                android:textColor="@color/app_text_color"
                android:background="@color/transparent_color"
                android:textAllCaps="false"
                android:gravity="center|right"
                android:textSize="@dimen/skip_button_text_size"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/explanation_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/explanation_text_size"
            android:text="This is some text example of correct and wrong explanation."
            android:layout_below="@+id/answer_status"
            android:scrollbars="vertical"
            android:padding="@dimen/common_margin"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/full_screen_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/full_screen_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
